#!/usr/bin/env bash
#install haproxy on a server

# Enable a dedicated PPA 
sudo apt-get -y update
sudo apt-get install -y --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.8

# Install Haproxy
sudo apt-get -y install haproxy=2.8.\*

# Getting access privileges to config
sudo chown -R "$USER":"$USER" /etc/default/haproxy
sudo cp /etc/haproxy/haproxy.cfg old_haproxy_cfg
echo "ENABLED=1" > /etc/default/haproxy

echo "global
   log 127.0.0.1 local0 notice
   maxconn 2000
   user haproxy
   group haproxy

# Default section
defaults
    mode http
	timeout connect 3000
	timeout client  10000
	timeout server  10000

# Frontend section
frontend website
    bind *:80
    default_backend web_servers

# Backend section
backend web_servers
    balance roundrobin
    server 353728-web-01 34.203.77.10:80 check
    server 353728-web-02 35.153.93.177:80 check" > /etc/haproxy/haproxy.cfg

# Restart Haproxy
sudo service haproxy restart
